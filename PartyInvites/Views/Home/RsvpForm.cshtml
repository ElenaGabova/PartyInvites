@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Приглашение на вечеринку</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <p>
                Ваше имя:
                @Html.TextBoxFor(x => x.Name)
            </p>
            <p>
                Ваш Email:
                @Html.TextBoxFor(x => x.Email)
            </p>
            <p>
                Ваш телефон:
                @Html.TextBoxFor(x => x.Phone)
            </p>
            <p>
                Ты сможешь подойти?
                @Html.DropDownListFor(x => x.WillAttend, new[] {
                new SelectListItem() {Text = "Да, я подойду", Value = bool.TrueString},
                new SelectListItem() {Text = "Нет, я не смогу подойти", Value = bool.FalseString}
                }, "Выберите вариант")
            </p>
            <input type="submit" value="Отправить данные" />
        }
    </div>
</body>
</html>
